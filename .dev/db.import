    // Create db if not exists

	$cmd = 'mysql -h' . $c['host'] . ' -u' . $c['username'] . ' -p' . $c['password'] . (isset($c['unix_socket']) ? ' -S ' . $c['unix_socket'] : '') . ' -e\'CREATE DATABASE IF NOT EXISTS `' . $c['database'] . '` DEFAULT CHARACTER SET utf8;\'';

