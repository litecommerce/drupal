    exec($cmd, $out, $r);

    if (!empty($out)) {
	
        echo 'Dropping old drupal tables...';

        array_shift($out);

        $baseCmd = 'DROP TABLE ';
        $queries = $baseCmd . implode('; ' . $baseCmd, $out) . ';';

        $cmd = 'mysql -h' . $c['host'] . ' -u' . $c['username'] . ' -p' . $c['password'] . (isset($c['unix_socket']) ? ' -S ' . $c['unix_socket'] : '') .' ' . $c['database'] . ' -e\'' . $queries . '\'';

	    $out = array();
    	$r = 0;

	    exec($cmd, $out, $r);

	    if ($r > 0) {
    	    echo implode("\n", $out) . "\n";
		    exit($r);
    	}
    
        echo 'OK' . "\n";
