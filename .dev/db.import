$tmp = explode(':', urldecode($c['host']));
$c['host'] = $tmp[0];
if (!empty($tmp[1])) {
	$c['unix_socket'] = $tmp[1];
}

echo 'Database: ' . $c['database'] . "\n";
echo 'User: ' . $c['username'] . "\n";
echo 'Dump files: ' . "\n";

