error_reporting(E_ALL ^ E_NOTICE);

if (!defined('DRUPAL_ROOT')) {
    define('DRUPAL_ROOT', dirname(realpath(__FILE__)) . '/..');
}

define('EXT', ob_get_level() > 0);
if (EXT) {
    ob_end_clean();
}

$pathToSql = realpath(dirname(realpath(__FILE__)) . '/sql') . '/';

$dumps = array();

if (isset($argv[1]) && $argv[1] == "fromsite") {
	// Import a website dump created with the following command:
	// mysql {DB} -u{USER} -p{PASS} {нужно на сервере сайта: --socket=/var/run/mysqld/mysqld.sock} -e 'show tables like "drupal_%"' | grep -v Tables_in | xargs mysqldump --skip-extended-insert --complete-insert --add-drop-table -u{USER} -p{PASS} {нужно на сервере сайта: --socket=/var/run/mysqld/mysqld.sock} {DB} > lc-site-dump.sql
	$dumps[] = 'lc-site-dump.sql';
	$dumps[] = 'lc-site-localize.sql';

} else {
	// Import default dumps
	$dumps[] = 'lcweb.sql';
	$dumps[] = 'demo.sql';
}

// Drop & create database
$dropDatabase = true;


$dir = DRUPAL_ROOT . '/sites/default';

$f1 = $dir . '/settings.php';

require_once ($f1);

